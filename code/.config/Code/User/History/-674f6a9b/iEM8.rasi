/*****----- Configuration -----*****/
configuration {
	modi:                       "drun,run,filebrowser";
    show-icons:                 false;
    display-drun:               "";
    display-run:                "";
    display-filebrowser:        "";
    display-window:             "";
	display-ssh:                "";
    display-calc:               "";
	drun-display-format:        "{name}";
	window-format:              "{w} · {c} · {t}";

    hover-select:               true;
    me-select-entry:            "MousePrimary";
    me-accept-entry:            "!MousePrimary";
    kb-mode-next:               "Control+space";
    kb-mode-previous:           "Control+Shift+space";
    kb-row-select:              "Control+s,s";
}

/*****----- Global Properties -----*****/
@import                          "shared/colors.rasi"
@import                          "shared/fonts.rasi"

* {
    border-colour:               var(selected);
    
    handle-colour:              var(selected);

    background-colour:           var(background-alt);
    foreground-colour:           var(foreground);
    
    alternate-background:        var(background-alt);

    normal-background:           var(background-alt);
    normal-foreground:           var(foreground);

    urgent-background:           var(urgent);
    urgent-foreground:           var(background);
    
    // active-background:           var(active);
    active-background:           var(background-alt);
    active-foreground:           var(urgent);

    selected-normal-background:  var(selected);
    selected-normal-foreground:  var(background-alt);
    
    selected-urgent-background:  var(active);
    selected-urgent-foreground:  var(background);
    
    selected-active-background:  var(selected);
    selected-active-foreground:  var(urgent);

    alternate-normal-background: var(background-alt);
    alternate-normal-foreground: var(foreground);

    alternate-urgent-background: var(background-alt);
    alternate-urgent-foreground: var(foreground);

    alternate-active-background: var(background-alt);
    alternate-active-foreground: var(foreground);
}

/*****----- Main Window -----*****/
window {
    /* properties for window widget */
    transparency:                "real";
	blur:						 80;
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       800px;
    x-offset:                    0px;
    y-offset:                    0px;
	background-color:           Black/25%;

    /* properties for all widgets */
    enabled:                     true;
    margin:                      0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               2px;
    border-color:                @border-colour;
    cursor:                      "default";
    /* Backgroud Colors */
    //background-color:            @background-colour;
    /* Backgroud Image */
    //background-image:          url("/path/to/image.png", none);
    /* Simple Linear Gradient */
    //background-image:          linear-gradient(red, orange, pink, purple);
    /* Directional Linear Gradient */
    //background-image:          linear-gradient(to bottom, pink, yellow, magenta);
    /* Angle Linear Gradient */
    //background-image:          linear-gradient(45, cyan, purple, indigo);
}

/*****----- Main Box -----*****/
mainbox {
    enabled:                     true;
    spacing:                     20px;
    margin:                      0px;
    padding:                     20px;
    border:                      0px solid;
    border-radius:               3px;
    border-color:                @border-colour;
    background-color:            transparent;
    children:                    [ "inputbar", "message", "custombox" ];
}

/*****----- A Custom Box -----*****/
custombox {
    spacing:                     20px;
    background-color:            inherit;
    text-color:                  @foreground-colour;
    orientation:                 vertical;
    children:                    [ "listview", "mode-switcher" ];
}

/*****----- Inputbar -----*****/
inputbar {
    enabled:                     true;
    spacing:                     10px;
    margin:                      0px;
    padding:                     8px 12px;
    border:                      0px solid;
    border-radius:               3px;
    border-color:                @border-colour;
    background-color:            @selected;
    text-color:                  @background-alt;
    children:                    [ "textbox-prompt-colon", "entry" ];
}

prompt {
    enabled:                     true;
    background-color:            inherit;
    text-color:                  inherit;
}
textbox-prompt-colon {
    enabled:                     true;
    padding:                     5px 0px;
    expand:                      false;
    str:                         "";
    //background-color:            inherit;
    text-color:                  inherit;
}
entry {
    enabled:                     true;
    padding:                     5px 0px;
    //background-color:            inherit;
    text-color:                  inherit;
    cursor:                      text;
    placeholder:                 "Search...";
    placeholder-color:           @background-alt;
}
num-filtered-rows {
    enabled:                     true;
    expand:                      false;
    background-color:            inherit;
    text-color:                  inherit;
}
textbox-num-sep {
    enabled:                     true;
    expand:                      false;
    str:                         "/";
    background-color:            inherit;
    text-color:                  inherit;
}
num-rows {
    enabled:                     true;
    expand:                      false;
    background-color:            inherit;
    text-color:                  inherit;
}
case-indicator {
    enabled:                     true;
    background-color:            inherit;
    text-color:                  inherit;
}

/*****----- Listview -----*****/
listview {
    enabled:                     true;
    columns:                     1;
    lines:                       12;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;
    
    spacing:                     5px;
    margin:                      0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               3px;
    border-color:                @border-colour;
    background-color:            transparent;
    text-color:                  @foreground-colour;
    cursor:                      "default";
}
scrollbar {
    handle-width:                4px ;
    handle-color:                @handle-colour;
    border-radius:               10px;
    background-color:            @alternate-background;
}

/*****----- Elements -----*****/
element {
    enabled:                     true;
    spacing:                     10px;
    margin:                      0px;
    padding:                     10px;
    border:                      0px solid;
    border-radius:               3px;
    border-color:                @border-colour;
    background-color:            @background-alt;
    text-color:                  @foreground-colour;
    cursor:                      pointer;
}

element-icon {
    background-color:            transparent;
    text-color:                  inherit;
    size:                        24px;
    cursor:                      inherit;
}

element-text {
    background-color:            transparent;
    text-color:                  inherit;
	highlight:                   bold #EBDBB2FF;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

element.normal.active {
	text-color:			@active;
	background-color:	@active-background;
}

element.selected.active {
	text-color:			@active-background;
	background-color:	@active;
    padding:            30px;

}

element.alternate.active {
	text-color:			@alternate-active-foreground;
	background-color:	@alternate-active-background;
}


/*****----- Mode Switcher -----*****/
mode-switcher{
    enabled:                     true;
    expand:                      false;
    orientation:                 horizontal;
    spacing:                     20px;
    margin:                      0px;
    padding:                     0px 0px;
    border:                      0px solid;
    border-radius:               4px;
    border-color:                @border-colour;
    background-color:            transparent;
    text-color:                  @foreground-colour;
}
button {
    padding:                     20px 20px 20px 20px;
    border:                      0px solid;
    border-radius:               4px;
    border-color:                @border-colour;
    background-color:            @alternate-background;
    text-color:                  inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
    font:   "FantasqueSansM Nerd Font Propo 20";
    cursor:                      pointer;
}
button selected {
    text-color:            var(selected-normal-foreground);
    background-color:                  var(selected-normal-background);
}

/*****----- Message -----*****/
message {
    enabled:                     true;
    margin:                      -10px 0px 0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               0px 0px 0px 0px;
    border-color:                @border-colour;
    background-color:            transparent;
    text-color:                  @foreground-colour;
}
textbox {
    padding:                     12px;
    border:                      0px solid;
    border-radius:               2px;
    border-color:                @border-colour;
    background-color:            @alternate-background;
    text-color:                  @foreground-colour;
    vertical-align:              0.5;
    horizontal-align:            0.0;
    highlight:                   none;
    placeholder-color:           @foreground-colour;
    blink:                       true;
    markup:                      true;
}
error-message {
    padding:                     10px;
    border:                      2px solid;
    border-radius:               8px;
    border-color:                @border-colour;
    background-color:            @background-colour;
    text-color:                  @foreground-colour;
}