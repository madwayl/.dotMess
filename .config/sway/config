# exec_always bash ~/.config/sway/scripts/lock-wallpaper.sh

# set $wallpaper_path $(find $HOME/.local/share/wallpapers -type f | shuf -n 1)
output * bg ~/.local/share/wallpapers/tmp/wallpaper.png fill

