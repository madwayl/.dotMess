include gruvbox_dark.conf

# BACKGROUND COLOR
background_opacity 0.85
background    #141616

# FONTs
# font_family     FantasqueSansM Nerd Font Mono
font_size       11.0
font_color      #ebdbb2
# font_family      FantasqueSansM Nerd Font Mono
# bold_font        FantasqueSansM Nerd Font Mono Extra Bold
# bold_italic_font FantasqueSansM Nerd Font Mono Extra Bold Italic

# URLs
detect_urls yes
detect_urls_in_paste yes

map ctrl+t new_tab_with_cwd
map ctrl+shift+t new_tab
map ctrl+w close_tab

enabled_layouts fat,tall,grid
map ctrl+shift+l next_layout
map ctrl+alt+t goto_layout tall
map ctrl+alt+s goto_layout stack

map f1 create_marker
map f2 remove_marker
map ctrl+p scroll_to_mark prev
map ctrl+n scroll_to_mark next

tab_bar_style powerline
tab_powerline_style slanted

window_margin_width -1
single_window_margin_width 5
window_padding_width 5
window_border_width 0.5

cursor #ebdbb2
cursor_shape  underline
cursor_underline_thickness 2.5
cursor_blink_interval 500

paste_actions quote-urls-at-prompt

wheel_scroll_multiplier 5.0

# SHELL INTEGRATION
shell_integration enabled

map ctrl+/      launch --allow-remote-control kitty +kitten kitty_search/search.py @active-kitty-window-id


# BEGIN_KITTY_FONTS
font_family      family="JetBrainsMonoNL Nerd Font Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS