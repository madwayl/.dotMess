{
    "custom/media": {
        "format": "{0}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/scripts/mediaplayer.py 2> /dev/null", // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl stop",
        "smooth-scrolling-threshold": 10, // This value was tested using a trackpad, it should be lowered if using a mouse.
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous"
    },
    "custom/powermenu": {
        "format": "‚èª",
        "tooltip": false,
        "on-click": "~/.config/rofi/powermenu/powermenu.sh"
    },
    "custom/recording": {
        "interval": 1,
        "format": "Û∞ªÉ {}",
        "tooltip": false,
        "exec": "echo $(ps -p $(pgrep wl-screenrec) -o etime= | xargs)",
        "exec-if": "pgrep wl-screenrec",
        "on-click": "pkill wl-screenrec && rm /tmp/cast || rm /tmp/castarea"
    },
    "custom/screen-sharing": {
        "format": "ÔÅã {}", // Or "LIVE" or whatever icon/text you want
        "tooltip": false,
        "interval": 1,
        "exec": "echo 'LIVE'", // Or a script that returns something dynamic
        "exec-if": "~/.config/waybar/modules/scripts/check-recording.sh",
        // "on-click": "pkill -f wf-recorder"
    },
    // Swaync Notification
    "custom/notification": {
        "tooltip": false,
        "format": "{} {icon}",
        "format-icons": {
            "notification": "Û±Ö´",
            "none": "ÔÉ≥",
            "dnd-notification": "Û±è©",
            "dnd-none": "Û∞Çõ",
            "inhibited-notification": "ÔÇ¢ ",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "Ôá∑ ",
            "dnd-inhibited-none": "Ôá∑ "
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "sleep 0.1 && swaync-client -t -sw",
        "on-click-right": "sleep 0.1 && swaync-client -d -sw",
        "escape": true
    }
}